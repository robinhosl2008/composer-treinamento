{
  "name": "robson/buscador-cursos",
  "description": "Projeto que busca os cursos no site da Alura",
  "type": "library",
  "scripts": {
    "verify_cs": "phpcs --standard=PSR12 src",
    "fix_cs": "phpcbf --standard=PSR12 src",
    "tests": {
      "unit": "phpunit tests/Unit",
      "integration": "phpunit tests/Integration"
    },
    "check": [
      "@verify_cs",
      "@fix_cs",
      "@tests"
    ]
  },
  "scripts-descriptions": {
    "check": "Executa as verificações no código (verify_cs, fix_cs e tests)"
  },
  "autoload": {
    "classmap": [
      "./ClassTeste.php"
    ],
    "files": [
      "./functions.php"
    ],
    "psr-4": {
      "Alura\\BuscadorDeCursos\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Robson Lourenço",
      "email": "robinhosl2008@gmail.com"
    }
  ],
  "require": {
    "guzzlehttp/guzzle": "^7.5",
    "symfony/dom-crawler": "^6.2",
    "symfony/css-selector": "^6.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "squizlabs/php_codesniffer": "^3.7",
    "phan/phan": "^5.4"
  }
}
